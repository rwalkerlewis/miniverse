# Miniverse Configuration

# LLM Provider Configuration
# Options: anthropic, openai, ollama
LLM_PROVIDER=openai
LLM_MODEL=gpt-5-nano
# Uncomment for local Ollama (defaults to http://127.0.0.1:11434)
# OLLAMA_BASE_URL=http://127.0.0.1:11434

# API Keys (required for cloud providers)
ANTHROPIC_API_KEY=your_anthropic_key_here
OPENAI_API_KEY=your_openai_key_here

# Database Configuration
DATABASE_URL=postgresql://localhost/miniverse

# Simulation Configuration
DEFAULT_TICK_COUNT=50
TICK_DURATION_SECONDS=10

# Logging
LOG_LEVEL=INFO
